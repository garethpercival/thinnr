@model ShortUrlModel

@{
    ViewData["Title"] = "Home Page";
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
<div class="alert alert-danger text-center">
    <p>@Model.ErrorMessage</p>
    <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Back</a>
</div>
}
else
{
    <div class="text-center">
        <h1>Your shortened URL is:</h1>
        <div class="alert alert-primary">
            <a href="@Model.HostName/@Model.Key" target="_blank">@Model.HostName/@Model.Key</a>
        </div>
        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index">Another...</a>
    </div>
}


